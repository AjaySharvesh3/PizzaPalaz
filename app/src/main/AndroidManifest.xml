    package="com.example.ajaysharvesh.firebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AccountActivity.LoginActivity"
            android:label="Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountActivity.MainActivity" />
        <activity
            android:name=".AccountActivity.SignupActivity"
            android:label="Sign Up" />
        <activity
            android:name=".AccountActivity.ResetPasswordActivity"
            android:label="Reset" />
        <activity
            android:name=".AccountActivity.TermsConditionsActivity"
            android:label="Terms for use" />
        <activity
            android:name=".ListItem"
            android:label="Items" />
        <activity
            android:name=".AccountActivity.Veggies"
            android:label="Veggies" />
        <activity
            android:name=".Sides"
            android:label="Sides" />
        <activity
            android:name=".Drinks"
            android:label="Drinks" />
        <activity android:name=".NonVeggie"></activity>
    </application>

</manifest>