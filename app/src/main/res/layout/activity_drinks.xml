<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ajaysharvesh.firebase.Drinks"    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="enter code here"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textStyle="bold" />

            <EditText
                android:layout_width="fill_parent"
                android:background="@drawable/bottom_style"
                android:drawableLeft="@drawable/ic_action_code"
                android:layout_height="wrap_content"
                android:hint="@string/code"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:id="@+id/txtCustomerName"/>

            <LinearLayout
                android:id="@+id/s1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/mar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/d1" />

                <TextView
                    android:id="@+id/g1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NAME: Pepsi Tin Mini --- CODE: DP1"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/s2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/mar2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/d2" />

                <TextView
                    android:id="@+id/d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NAME: Cola Tin Mini --- CODE: DP2"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/mar3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/d3" />

                <TextView
                    android:id="@+id/g3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NAME: Maaza --- CODE: DP3"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/s4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/mar4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/d1" />

                <TextView
                    android:id="@+id/g4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NAME: Sprite Tin --- CODE: DP4"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/s5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp">

                <ImageView
                    android:id="@+id/mar5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:src="@drawable/d1" />

                <TextView
                    android:id="@+id/g5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NAME: 7Up Tin --- CODE: D5"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="@string/toppings"
                style="@style/HeaderTextStyle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:id="@+id/hasWhippedCream"/>

                <TextView
                    android:id="@+id/textView2"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whipped_cream1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:id="@+id/hasChocolate"/>

                <TextView
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chocolate1"    />
            </LinearLayout>


            <TextView
                android:textStyle="bold"
                android:textColor="#fff"
                android:text="@string/quantity"
                style="@style/HeaderTextStyle"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="128dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_style"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="-"
                    android:onClick="decrement"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/quantity_text_view"
                    android:layout_marginBottom="16dp"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textColor="#fff" />

                <Button
                    android:background="@drawable/button_style"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_width="128dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:onClick="increment"/>

            </LinearLayout>


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/order"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_style"
                android:textAllCaps="true"
                android:onClick="submitOrder"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
