<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ajaysharvesh.firebase.ListItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="607dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/iphone">

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="veggies"
                android:textSize="30sp"
                android:background="@drawable/bottom_style1"
                android:layout_below="@+id/t3"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-smallcaps" />

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="non veggies"
                android:textSize="30sp"
                android:background="@drawable/bottom_style1"
                android:layout_below="@+id/b1"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-smallcaps" />

            <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="sides"
            android:textSize="30sp"
            android:background="@drawable/bottom_style1"
            android:layout_below="@+id/b2"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps" />

            <Button
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="drinks"
                android:textSize="30sp"
                android:background="@drawable/bottom_style1"
                android:layout_below="@+id/b3"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-smallcaps" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_above="@+id/t2"
                android:layout_alignTop="@+id/t1"
                android:layout_toLeftOf="@+id/t1"
                android:layout_toStartOf="@+id/t1"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:fontFamily="serif"
                android:text="Order Here !"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Problems come and go pizza is forever"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="PizzaPals"
                android:textColor="#000"
                android:textSize="56dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
